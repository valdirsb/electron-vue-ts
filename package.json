{
  "name": "vue-ts",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",

  "scripts": {
    "dev": "concurrently \"cross-env NODE_ENV=development vite\" \"tsc --project tsconfig.electron.json && electron dist-electron/main.js\"",
    "build": "vue-tsc && vite build && tsc --project tsconfig.electron.json",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder -w",
    "electron:build:lin": "npm run build && electron-builder -l",
    "electron:build:mac": "npm run build && electron-builder -m"
  },

  "build": {
    "appId": "com.electron-vue-ts.nome",
    "productName": "ElectronVueTs",
    "copyright": "Â© 2025 Valdir Barbosa",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  },

  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },

  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.13.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "npm-run-all2": "^7.0.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.2"
  }

}

